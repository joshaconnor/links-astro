---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <a href={href} class="grid-container">
    <div class="image-side">
      <img src="/squareAtlantaPark.jpg" alt="image?" />
    </div>
    <div class="text-side">
      <h2>
        {title}
      </h2>
      <p>
        {body}
      </p>
    </div>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 10px;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
  }
  img {
    max-width: 125px;
    height: auto;
    border-radius: 50%;
    float: right;
    padding-right: 10px;
  }
  .link-card > a.grid-container {
    display: grid;
    column-gap: 15px;
    align-content: center;
    justify-content: center;
    grid-template-columns: 40% 30% 30%;
  }
  div.image-side {
    grid-column: 1;
  }
  div.text-side {
    grid-column: 2 / span 2;
    align-self: center;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
